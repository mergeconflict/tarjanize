{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "types/**/*.d.ts",
    "types/generated/**/*.ts",
    "crates/tarjanize-viz/templates/**/*.ts",
    "e2e/**/*.ts",
    "playwright.config.ts",
    "vitest.config.ts",
    "eslint.config.js"
  ]
}